<div id ="top"></div>
<div id="header">
	<%=render :partial => '/beavertracks/top'%>
	<h1><%= h@title%></h1>
</div>
<% cache  :action => 'show', :part => 'content' do %>
<div id ="container">
<div id="detail">
	<% truncated_comment = truncate_comment(@building.description) %>
	<span id="image"><%= link_to image_tag(@building.flickr_url, :class => 'site_photo', :title => @building.name, :border => 0), image_building_url(@building, :name => @building.name, :url => @building.og_url) %></span>
	<span id ="description">
  <div id="truncated_comment_body">
    <%= truncated_comment %>
  </div>
  <div id="comment_body" style="display:none">
    <%= truncate_comment(@building.description, @building.description.size) %>
  </div>

  <% if @building.description.size > 155 or @building.description[0..155].include?("\n") %>
    <div id="show_more">
    	    <a href="#" onclick="$('show_more').toggle();$('show_less').toggle();$('comment_body').toggle();$('truncated_comment_body').toggle();; return false;">More</a>
	</div>
    <div id="show_less" style="display:none">
    	    <a href="#" onclick="$('show_more').toggle();$('show_less').toggle();$('comment_body').toggle();$('truncated_comment_body').toggle();; return false;">Less</a>
  	</div>
  <% end %>
</span>

<%end%>
</div>
<div id ="button"><%= button_to 'Nearby Locations', locations_map_url(@building.id), :method => 'get', :class => 'button' %>  </div>

<% cache :action => 'show', :part =>form_authenticity_token.inspect do %>
<%= render_flickr_sidebar_widget(@flickr_id, @building.tag) %>
<%end%>
</div>
