<h1><%= @title %></h1>

<% cache  :action => 'show', :part => 'content' do %>

<div id="container">
<div id="detail">

  <span id="image"><%= link_to image_tag(@building.flickr_thumb_url, :class => 'site_photo', :title => @building.name, :border => 0), File.join('/buildings', @building.id.to_s, '/image') %></span>

  <span id="description"><%= @building.description %></span>

  <div id ="button"><%= button_to 'Nearby Locations', locations_map_url(@building.id), :method => 'get', :class => 'button' %>  </div>

  <div id="flickr_nav">

    <%#= render_cell :buildings, :flickr %>
    <%= render :partial => '/buildings/flickr_list', :locals => { :building => @building, :photos => @photos } %>

  </div>

  <p>Flickr Images (<%= @building.flickr_tag %>) </p>

</div>
</div>

<%end%>
