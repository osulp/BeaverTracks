<div id="geo-mere-laal-fields" style="display:block;"> 

<p>Enter you current latitude and longitude</p> 

<%= form_for :patron, url: patrons_path do |f| %>
  <%= f.label :lat %>
  <%= f.text_field :lat, 'value' => @lat %>
  <br>
  <%= f.label :lng %>    
  <%= f.text_field :lng, 'value' => @lng %> 

  <%= f.submit %>
<% end %> 

</div>
</div>

